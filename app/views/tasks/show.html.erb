<h1> <%= render "completed", task: @task %> <%= @task.title %> </h1>
<h3> <%= @task.details %> </h3>

<p> <%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %> </p>

<p> <%= link_to "Edit task", edit_task_path %> </p>

<p> <%= link_to "Back to tasks", tasks_path %> </p>
